<!DOCTYPE html>
<html>
  <head>
    <title>HRManagement</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body ng-app="">

    <%= render 'layouts/share/flash_message'%>

    <div class="text-center">
      <h1>HrLookUp</h1>
    </div>

    <% if user_signed_in? %>
      <%= render 'layouts/share/header'%>
    <% else %>
      <div class="heading"></div>
    <% end %>

    <div class="container">
      <%= yield %>
    </div>


    <%= render 'layouts/share/footer'%>

  </body>
</html>

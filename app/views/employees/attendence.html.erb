<h2 class="text-center">Employees Attendence <hr/></h2>
<% if !@attendence.blank? %>
    <h3> <%= @attendence.last.day.strftime("%B %Y") %> </h3>
    <table class="table">
      <thead>
        <tr>
          <th>Date</th>
          <th>in_time</th>
          <th>out_time</th>
        </tr>
      </thead>

      <tbody>
        <% @attendence.each do |atd| %>
          <% if atd.holiday.present? %>
            <tr style="background: #ffcccc">
                <th> <%= atd.day.strftime('%d-%a-%Y') %></th>
                <th> <%= atd.holiday %></th>
                <th></th>
            </tr>
          <% else %>
            <tr>
              <td><%= atd.day.strftime('%d-%a-%Y') %></td>
              <td><%= atd.in_time.strftime("%I:%M%p") %></td>
              <td><%= atd.out_time.strftime("%I:%M%p") %></td>
            </tr>
          <% end %>
           
        <% end %>
      </tbody>
    </table>
  <% else %>
    <h3>Attendence Sheet Not Found </h3>
  <% end %>
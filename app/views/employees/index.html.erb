<p id="notice"><%= notice %></p>

<h1>Employees</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Empid</th>
      <th>Firstname</th>
      <th>Midname</th>
      <th>Lastname</th>
      <th>Bloodtype</th>
      <th>Nationality</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Pin</th>
      <th>Homenumber</th>
      <th>Mobile</th>
      <th>Email</th>
      <th>Joined at</th>
      <th>Birth date</th>
      <th>Gender</th>
      <th>Marital</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.title %></td>
        <td><%= employee.empid %></td>
        <td><%= employee.firstname %></td>
        <td><%= employee.midname %></td>
        <td><%= employee.lastname %></td>
        <td><%= employee.bloodtype %></td>
        <td><%= employee.nationality %></td>
        <td><%= employee.address %></td>
        <td><%= employee.city %></td>
        <td><%= employee.state %></td>
        <td><%= employee.pin %></td>
        <td><%= employee.homenumber %></td>
        <td><%= employee.mobile %></td>
        <td><%= employee.email %></td>
        <td><%= employee.joined_at %></td>
        <td><%= employee.birth_date %></td>
        <td><%= employee.gender %></td>
        <td><%= employee.marital %></td>
        <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

